@using DistLab2.ViewModels;
@model List<AuctionVM>
@{
    ViewData["Title"] = "Auction";
}

<section class="h-full">
    <h1 class="my-3 py-3 text-3xl font-bold">Auctions</h1>
    <div class="flex justify-center items-center">
        <div class="max-w-[1070px] overflow-x-auto no-scrollbar">

            <div class="flex flex-row gap-4">
                @foreach (var item in Model)
                {
       
                    <a href="/auction/details/@item.Id">

                        <div class="relative h-[460px] w-[340px] overflow-clip rounded-3xl cursor-pointer ">
                            <div class="absolute inset-0 z-10 h-full w-full bg-gradient-to-b from-black/40 to-black/10"></div>
                            <img class="inset-0 object-cover absolute h-full w-full"
                                 src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)"
                                alt="" />

                            <p class="absolute top-4 left-6 text-white z-20 text font-bold">@item.Name</p>
                        </div>
                    </a>
   
    
                }
            </div>
        </div>
    </div>
</section>