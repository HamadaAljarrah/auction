@{
    ViewData["Title"] = "Create auction";
}

<section class="h-full pt-8">
    <div class="w-[500px] rounded-3xl bg-white m-auto  p-8">
      <h1 class="mb-8 text-center text-3xl font-bold">Create Auction</h1>
      <div class="flex flex-col gap-4">
        <input placeholder="Title" class="w-full rounded-xl bg-slate-50 p-3 px-4 placeholder:font-light focus:outline-black" type="text" />

        <textarea rows="5" placeholder="Description" class="w-full resize-none rounded-xl bg-slate-50 p-3 px-4 placeholder:font-light focus:outline-black" type="text"></textarea>

        <input placeholder="Ending Date" class="w-full rounded-xl bg-slate-50 p-3 px-4 text-black/30 placeholder:font-light focus:outline-black" type="date" />

        <input placeholder="Start price" class="w-full rounded-xl bg-slate-50 p-3 px-4 placeholder:font-light focus:outline-black" type="number" />

        <input placeholder="Start price" class="w-full rounded-xl bg-slate-50 p-3 px-4 placeholder:font-light focus:outline-black text-black/30 font-light" type="file" />

        <button class="mt-2 w-full rounded-xl bg-black/90 p-3 text-white">Publish</button>
      </div>
  
    </div>
  </section>