<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DistLab2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DistLab2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>

<body class="overflow-y-auto flex flex-col justify-between bg-cus-bg ">
    <header>
        <nav class="py-3 bg-white ">
            <div class="container">
                <div class="flex items-center justify-between">
                    <a class="flex items-end justify-center gap-1" href="/">
                        <h1 class="font-bold text-xl">Logo</h1>
                        <span class="w-2 h-2 rounded-full bg-red-600"></span>
                    </a>
                    <div class="flex gap-4">
                        <a href="/auction">Auctions</a>
                        <a href="/auction/myauctions">My Auctions</a>
                        <a href="/auction">Attended auctions</a>
                        <a href="/auction">Winning auctions</a>

                    </div>
                    <div class="flex items-center gap-4">
                        <a href="/auth/login">Login</a>
                        <a href="/auth/register" class="rounded-lg bg-black/90 px-4 py-2 text-white transition-all hover:bg-black/80">Sign up</a>
                    </div>
                </div>

            </div>
        </nav>
    </header>


    <div class="container flex-grow">
        <main role="main" class="pb-3 h-full">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DistLab2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
