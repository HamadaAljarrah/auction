@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="flex gap-3 justify-end items-center">
    <a class="nav-link text-dark" asp-controller="Auth" asp-action="Manage" title="Manage">Hello
        @User.Identity?.Name!</a>
        <form class="form-inline" asp-controller="Auth" asp-action="Logout"
            asp-route-returnUrl="@Url.Action("Index", "Home")">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </div>

}

else
{
    <div class="flex items-center gap-4">
    <a asp-controller="Auth" asp-action="Login">Login</a>
    <a asp-controller="Auth" asp-action="Register"
        class="rounded-lg bg-black/90 px-4 py-2 text-white transition-all hover:bg-black/80">Signup</a>
</div>
}
